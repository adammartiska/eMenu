{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom", "dom.iterable"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@emenu/admin/pages": ["libs/admin/pages/src/index.ts"],
      "@emenu/customer-shared/utils": [
        "libs/customer-shared/utils/src/index.ts"
      ],
      "@emenu/customer/pages": ["libs/customer/pages/src/index.ts"],
      "@emenu/customer/redux": ["libs/customer/redux/src/index.ts"],
      "@emenu/customer/shared/utils": [
        "libs/customer/shared/utils/src/index.ts"
      ],
      "@emenu/shared/generated": ["libs/customer/generated/graphql.tsx"],
      "@emenu/shared/shared-components": [
        "libs/shared/shared-components/src/index.ts"
      ],
      "@emenu/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
